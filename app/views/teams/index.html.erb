<p id="notice"><%= notice %></p>
<h1 style="font-family:Arial Black;font-size:50px;">チーム一覧</h1>

<table>
  <thead>
    <tr style="font-family:Arial Black;font-size:20px;">
      <th style="padding:30px 150px 10px 300px;">チーム名 </th>
      <th style="padding:30px 0px 10px 0px;">チームに加る・外れる</th>
      <th style="padding:30px 0px 10px 50px;">チームメンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to new_team_path,  class: 'btn btn-outline-secondary' do%>
    <span>新チーム</span>
  <% end %>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        
        <td style="padding: 30px 150px 10px 300px;">
          <%= link_to team_kpts0_path(team), class: 'btn btn-outline-info' do%>
            <% team.team_name %>
          <% end %>
        </td>
        <td style="padding:30px 0px 10px 0px;">
          <%= link_to team, class: 'btn btn-outline-warning' do%>
            チームに加る・外れる
          <% end %>
        </td>
        <td style="padding:30px 0px 10px 50px;">
          <%= link_to team_members_path(team), class: 'btn btn-outline-success' do%>
            チームメンバー   
          <% end %>  
        </td>
        <% if team.user == current_user %>
          <td><%= link_to '編集', edit_team_path(team) %></td>
          <td><%= link_to '削除', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
