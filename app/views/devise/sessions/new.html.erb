
<p id="notice"><%= notice %></p>

<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "2文字以上"%>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上" %>
  </div>



  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

